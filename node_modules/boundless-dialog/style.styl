@require "variables"

// Skin-specific styles go here. Demo-specific styles go in demo/style.styl.

.b-dialog-wrapper {
    line-height: 0;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9999;
}

.b-dialog {
    background: Dialog-backgroundColor;
    border: 1px solid Dialog-borderColor;
    border-radius: borderRadius;
    box-shadow: 1px 2px 3px Dialog-boxShadowColor;
    color: Dialog-color;
    line-height: 1.5;
    padding: 1.5rem;

    *:last-child {
        margin-bottom: 0;
    }
}
